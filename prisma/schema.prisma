generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VPS {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  merchantName String
  cpu          CPU
  memory       Memory
  storage      Storage
  bandwidth    Bandwidth
  price        Float
  currency     String
  startDate    DateTime @default(now())
  endDate      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

type CPU {
  cores Int
  model String
}

type Memory {
  size Int // GB
}

type Storage {
  size Int // GB
}

type Bandwidth {
  size Int // GB
}

model ExchangeRate {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  base      String
  rates     Json
  updatedAt DateTime @updatedAt
} 