generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       Int      @id @default(autoincrement())
  username String   @unique
  password String
  vps      Vps[]
}

model Vps {
  id          Int      @id @default(autoincrement())
  name        String
  cpuCores    Int
  cpuModel    String
  memory      Int
  disk        Int
  bandwidth   Int
  price       Float
  currency    String
  startTime   DateTime @default(now())
  endTime     DateTime
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
}

model ExchangeRate {
  id        Int      @id @default(autoincrement())
  currency  String   @unique
  rate      Float
  updatedAt DateTime @default(now())
} 